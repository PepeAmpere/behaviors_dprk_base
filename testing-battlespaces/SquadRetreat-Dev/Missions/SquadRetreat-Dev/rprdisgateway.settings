// Settings for Pitch Talk RPR/DIS Gateway

settings_version=2

//-----------------------------
// Setting for Pitch Talk side
//-----------------------------
pitchtalk {
  federationname="VBS Radio"
  // format: lsd="crcHost=<address>:<port>
  lsd="crcHost=127.0.0.1:8992"

  profile="B"
}

//--------------------------
// Setting for RPR/DIS side
//--------------------------
rpr_dis {

  // The type of exercise to connect to. Can be "RPR" or "DIS".
  // Configure settings for the different modes in the sections rpr and dis below.
  gatewaymode="DIS"

  // Siteid and Application id must be unique in a federation.
  siteid=45
  applicationid=9

  // Sample rate for outgoing traffic. Can be 8000, 16000, 24000 or 32000.
  samplerate=8000

  // Encoding for outgoing traffic. Can be "ULAW", "PCM16" or "CVSD" (experimental).
  // Supported encodings are:
  // ULAW(8-bit u-law)
  // PCM16(16-bit Linear PCM 2’s complement, Big Endian)
  // CVSD(MIL-STD-188-113) (experimental)
  //encoding=PCM16

  //--------------------------------
  // Settings for gateway mode "RPR"
  //--------------------------------
  rpr {
    federationname="VBS Radio"
    // Address of the bridging federation
    lsd="crcHost=127.0.0.1:8989"

    // The type of HLA API to connect through.
    // See the users guide for details on how to configure the RTI Profile.
    // "B" (HLA Evolved Java), "I" (HLA Evolved C++)
    profile="B"

  }

  //--------------------------------
  // Settings for gateway mode "DIS"
  //--------------------------------
  dis {
    exerciseid=1

    // Format of lsd:
    // <send address>[:<send port>][,<send/receive interface>[:<receive port>]]
    // send address can be: a unicast (single ip), broadcast or multicast address
    // send/receive interface must be a ip address available in the host (single ip adress or 0.0.0.0 for all interfaces)
    // Additional flags (separated by ";")
    // HEARTBEAT=5
    // DELETE=13
    // DIS_VERSION=6
    // LOOPBACK
    // DELIVER_ALL_RAW_DIS_PDUS
    // DEBUG
    // MULTICAST_TTL=1

    // Default DIS port and broadcast an all networks (send/receive all interfaces)
    lsd="255.255.255.255:3000"

    // Custom DIS port and broadcast on local subnet (send on 3009, receive on 3008 on interface 192.168.0.123)
    //lsd="192.168.0.255:3009,192.168.0.123:3008"

    // Custom DIS port and multicast (send/receive all interfaces)
    //lsd="239.100.0.1:6994"

    // Custom DIS port and multicast (send/receive on interface 192.168.0.123)
    //lsd="239.100.0.1:6994,192.168.0.123:6994"
  }

  //------------------------------------------
  // Configuration for RPR Transmitters created
  // Default settings for these values a stored
  // in the rprdisgateway.settings.defaults
  // embedded in the jar file
  //------------------------------------------
  transmitter {

    // Transmitter bandpass in Hz (Default: 2.1 GHz)
    bandwidth=2100000000

    // Transmitter average effective radiated power in decibel-milliwatts (dBm)
    // For conversion from W to dBm see https://en.wikipedia.org/wiki/DBm
    //transmittedpower=37

    // The type of radio system
    //radiosystemtype="7.0.0.1.0.0"

    // The modulation mode, defined as a modulationtype alias, e.g. "AM"
    //modulation=""

    // Definitions of modulation types
    //modulationtypes {
      // Alias = [ModulationSystemType, MajorModulation, Detail]
     //AM =       [1, 1, 2]
     //FM =       [1, 3, 1]
     //CW =       [1, 1, 3]
     //LSB =      [1, 1, 6]
     //USB =      [1, 1, 9]
     //INTERCOM = [0, 0, 0]
    //}
  }

  //------------------------------------------
  // Configuration for location mapping.
  // Sets User locations to mapped RPR Entity
  // locations.
  //------------------------------------------
  locationmapping {
    // Enable flag
    //enable=true

    // If true, will match User's external mapping to EntityIdentifier, e.g. 1.2.7.
    //matchentityidentifier=true

    // If true, will match User's external mapping to Marking, e.g. "Unit1".
    //matchmarking=true

    // Distance update filter threshold in meters (including height). Mapped Users will only update their location when
    // changed more than this threshold. This is used to reduce the number of updates in Talk federation. This can lower
    // the fidelity of Talk Effects. But in most cases, Effects do not require the same location resolution as for
    // example visualization might need, therefore this can be reduced.
    // Set to 0 to disable filter
    //distanceupdatefilterthreshold=10
  }
}
